<%- include('header'); -%>
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3">

        <h1  style="color:#3f9f22"><span class="fa fa-sign-in"></span> Login</h1>

        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
          </div>
  
          <button type="submit" class="btn btn-warning btn-lg" style="background-color:#3db0a7;border:3px solid #3f9f22">Login</button>
      </form>
  
      <hr>
  
      <p>Need an account? <a href="/signup" style="font-weight: bolder; color:#3f9f22;font-size:18px;">Signup</a></p>
      <p>Or go <a href="/" style="font-weight: bolder; color:#3f9f22;font-size:18px;">Home</a>.</p>
  


    </div>
  </div>
<%- include('footer'); -%>
